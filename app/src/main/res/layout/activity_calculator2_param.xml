<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator2Param"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageShape"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/nama2Param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.050"
        android:text="NamaBangun"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rumus"
        android:id="@+id/rumus2Param"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black" />

    <EditText
        android:textSize="21dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Angka 1"
        android:textAlignment="center"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bginput"
        android:id="@+id/editTextNumber1"/>

    <EditText
        android:textSize="21dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Angka 2"
        android:textAlignment="center"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bginput"
        android:id="@+id/editTextNumber2"/>

    <TextView
        android:textColor="@color/black"
        android:textSize="21dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bginput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:textAlignment="center"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:id="@+id/hasil2Param"/>

    <Button
        android:id="@+id/buttonHitung2Param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HITUNG"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:background="@drawable/bgbutton"/>

</LinearLayout>